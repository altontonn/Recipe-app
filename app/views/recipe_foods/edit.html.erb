<section class='recipeEdit'>
  <%= link_to '< Back', recipe_path(id: @recipe), class: "btn btn-primary" %>
  <h2 class="food-table mt-2 text-decoration-underline text-center">Update Ingredient</h2>
  <%= form_with model: [@recipe, @recipe_food], class: 'flex_column' do |f| %>
    <div class="field">
      <%= f.label :quantity, style: "color: #03045e", class: "mb-2 fw-bolder" %><br>
      <%= f.number_field :quantity, placeholder: 'Quantity', required: true, class: "form-control" %><br>
    </div>
  </div>
  <%= f.submit "Modify ingredient", class: "btn btn-primary"%>
  <%end%>
</section>
