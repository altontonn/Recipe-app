<section class='recipeNew'>
  <%= link_to "< Back", recipe_path(id: @recipe), class:"btn btn-primary" %>
  <h2  class="food-table text-center mt-3">New Ingredient</h2>
  <%= form_with url: recipe_recipe_foods_path, class: 'flex_column', scope: :recipe_food do |f| %>
    <%= render "shared/error_form_message", resource: @recipe_food %>
    <div class="field">
      <%= f.label :quantity, style: "color: #03045e", class: "mb-2 fw-bolder"%><br>
      <%= f.number_field :quantity, placeholder: 'Quantity', required: true, class: "form-control"%><br>
    </div>
    <div class="field field_select">
      <%= f.label :food_id, "Food", style: "color: #03045e", class: "mb-2 fw-bolder"%><br>
      <%= f.collection_select(:food_id, Food.where(user_id: @current_user), :id, :name, class: "form-control")%><br>
    </div>
    <%= f.submit "Add ingredient", class: "btn btn-primary mt-4"%>
  <%end%>
</section>
