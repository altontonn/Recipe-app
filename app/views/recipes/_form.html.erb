
<%= form_with(model: recipe, html: { class: "" }) do |form| %>
<%= render "shared/error_form_message", resource: recipe %>
  <div class="field">
    <%= form.label "Name", style: "display: block" %>
    <%= form.text_field :Name, required: true %>
  </div>

  <div class="field">
    <%= form.label "Preparation_time", style: "display: block" %>
    <%= form.text_field :Preparation_time, required: true %>
  </div>

  <div class="field">
    <%= form.label "Cooking_time", style: "display: block" %>
    <%= form.text_field :Cooking_time, required: true %>
  </div>

  <div class="field">
    <%= form.label "Description", style: "display: block" %>
    <%= form.text_area(:Description, required: true, size: '30x5') %>
  </div>
  
  <div class="field">
    <%= form.label :Public %><br />
    <%= form.label :Public, "True", :value => "True"  %>
    <%= form.radio_button :Public, true%>
    <%= form.label :Public, "False", :value => "False" %>
    <%= form.radio_button :Public, false, :checked => true %>
  </div>

  <%= form.submit "Create Recipe", class: "button"%>
<% end %>
