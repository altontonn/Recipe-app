<section class='recipeShow'>
  <h2 class="food-table mt-5 text-center text-decoration-underline"><%=@recipe.name%></h2>
  <div class='recipe_information'>
    <p>Preparation time: <b><%=@recipe.preparation_time%> minutes</b></p>
    <div class='public_logo'>
      <p><b><%=@recipe.public ? 'Public' : 'Not Public'%></b></p>
      <div class="<%=@recipe.public ? 'public' : 'not_public'%>">
        <span class="<%=@recipe.public ? 'public_switch' : 'not_public_switch'%>"></span>
      </div>
    </div>
    <p>Cooking time: <b><%=@recipe.cooking_time%> minutes</b></p>
    <p><%=@recipe.description%></p>
  </div>
  <div class='recipe_buttons'>
    <% if can? :update, @recipe%>
      <%=link_to "Generate Shopping List", general_shopping_list_index_path, class: "btn btn-primary" %>
      <%=link_to "Add ingredient", new_recipe_recipe_food_path(@recipe), class: "btn btn-primary" %>
    <%end%>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'ingredient'%>
    </tbody>
  </table>
</section>
