
<%= form_with(model: food, html: { class: "" }) do |form| %>
<%= render "shared/error_form_message", resource: food %>
  <div class="field">
    <%= form.label "Food name", style: "display: block" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label "Measurment Unit(g, kg, l, ml)", style: "display: block" %>
    <%= form.text_field :measurement_unit, required: true %>
  </div>

  <div class="field">
    <%= form.label "Unit price", style: "display: block" %>
    <%= form.text_field :price, required: true %>
  </div>

  <div class="field">
    <%= form.label "quantity", style: "display: block" %>
    <%= form.number_field :quantity, required: true %>
  </div>

  <%= form.submit "Create Food", class: "button"%>
<% end %>